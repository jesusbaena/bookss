<div class = "container">
<h1 class="alert alert-dark" role="alert">Libros</h1><br>

<div class="btn btn-secondary"><%= link_to "Nuevo Libro", new_book_path %></div>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha de publicación</th>
        </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
        <tr>
            <td ><%= book.title %></td>
            <td><%= book.description %></td>
            <td><%= book.publication_date %></td>
            <td>
                <%= link_to "Mostrar", book %>
                <% if signed_in? %>
                    <%= link_to "Editar", edit_book_path(book) %>
                    <%= link_to "Eliminar", book, method: :delete, data: {confirm: "¿Estás seguro que quieres eliminar este libro?"}%>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
